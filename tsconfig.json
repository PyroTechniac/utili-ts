{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "strict": true,
        "declaration": true,
        "importHelpers": false,
        "tsBuildInfoFile": "./.cache/tsbuildinfo.json",
        "incremental": true,
        "listEmittedFiles": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ]
}